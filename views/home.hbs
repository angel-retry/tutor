<div class="container-fluid mt-5 row mx-auto" style="max-height: 100vh; max-width: 1600px;">
  <div class="col-md-8 col-lg-9" >
    <form action="/home" class="d-flex mb-3">
      <input class="form-control me-2 py-2" name="keyword" type="search" placeholder="Search" aria-label="Search"
        value="{{keyword}}">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    <div class="row">
      {{#each teachers as |teacher|}}
        <div class="col-sm-6 col-lg-4 mb-3">
          <a href="/lessons/{{teacher.id}}" class="text-decoration-none text-black">
            <div class="card" style="height: 300px;">
              <div class="card-body">
                <div class="d-flex gap-4">
                  {{#if teacher.User.avatar}}
                    <img src="{{teacher.User.avatar}}"  class="col-6 rounded-0" alt=""  style="object-fit:cover;" >
                  {{else}}
                    <img src="https://via.placeholder.com/200x200" class="col-6 rounded-0" alt="" style="object-fit:cover;">
                  {{/if}}
                  <div class="d-flex flex-column col-6 justify-content-center">
                    <h3 class="fw-bold">{{teacher.User.name}}</h3>
                    <p>{{teacher.User.nation}}</p>
                  </div>
                </div>
                <div class="card-title mt-4 fw-bold">
                  {{teacher.courseDescription}}
                </div>
              </div>
              
            </div>
          </a>
        </div>
      {{/each}}
      <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <div class="col-md-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-center">
          <h5 class="text-center fw-bold bg-primary text-white py-2 rounded-3 d-inline-flex px-2 mx-auto mb-3">學習時數總排行</h5>
        </div>
        <div class="d-flex gap-4 align-items-center justify-content-center  mb-3">
          <img src="https://via.placeholder.com/200x200" alt="" class="col-6 rounded-circle" style="height: 80px; width: 80px; object-fit:contain">
          <div class="d-flex fs-5 fw-bold gap-2 flex-wrap">
            <p class="mb-0">No.x</p>
            <p class="mb-0">Name</p>
          </div>
        </div>
        <div class="d-flex gap-4 align-items-center justify-content-center">
          <img src="https://via.placeholder.com/200x200" alt="" class="col-6 rounded-circle"
            style="height: 80px; width: 80px; object-fit:contain">
          <div class="d-flex fs-5 fw-bold gap-2 flex-wrap">
            <p class="mb-0">No.x</p>
            <p class="mb-0">Name</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>