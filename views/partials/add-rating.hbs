{{#if add_rating_success}}
<div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
  style="z-index: 200;background: rgba(108, 117, 125, 0.5);">
  <div class="card col-11 col-md-6 card-dismissible pb-5" style="opacity: 1;">
    <div class="card-body d-flex flex-column align-items-center gap-1">
      <div class="mb-3">
        <h2 class="text-center fw-bold pt-4">評分成功!</h2>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="name" class="form-label">Teacher's name</label>
        <input type="text" class="form-control" id="name" value="{{add_rating_success.teacherName}}" disabled readonly>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="time" class="form-label">Time</label>
        <input type="text" class="form-control" id="time"
          value="{{specifiedStartTime add_rating_success.startTime}} ~ {{specifiedEndTime add_rating_success.endTime}}"
          disabled readonly>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="rating" class="form-label">Rating</label>
        <input type="text" class="form-control" id="rating" name="rating" 
           value="{{add_rating_success.rating}}" disabled readonly />
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comment" disabled readonly>{{add_rating_success.comment}}</textarea>
      </div>
      <a href="/users/{{user.id}}" class="btn btn-primary col-12 col-sm-2 py-2">OK</a>
    </div>
  </div>
</div>
{{/if}}