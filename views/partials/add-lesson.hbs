{{#if add_lesson_error_teacher}}
<div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
  style="z-index: 200;background: rgba(108, 117, 125, 0.5);">
  <div class="card col-11 col-md-6 card-dismissible pb-5" style="opacity: 1;">
    <div class="card-body d-flex flex-column align-items-center gap-3">
      <div class="mb-3">
        <h2 class="text-center fw-bold pt-4">預約失敗!</h2>
        <p class="text-center text-danger fw-bold mb-0">{{teacher.User.name}}的這堂課已被預約走了!請在選擇其他課!</p>
      </div>
      <a href="/lessons/{{teacher.id}}" class="btn btn-primary col-12 col-sm-2 py-2">OK</a>
    </div>
  </div>
</div>
{{/if}}

{{#if add_lesson_error_student}}
<div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
  style="z-index: 200;background: rgba(108, 117, 125, 0.5);">
  <div class="card col-11 col-md-6 card-dismissible pb-5" style="opacity: 1;">
    <div class="card-body d-flex flex-column align-items-center gap-3">
      <div class="mb-3">
        <h2 class="text-center fw-bold pt-4">預約失敗!</h2>
        <p class="text-center text-danger fw-bold mb-0">您已經在這個時間點有這堂課了!</>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="name" class="form-label">Teacher's name</label>
        <input type="text" class="form-control" id="name" value="{{add_lesson_error_student.Teacher.User.name}}" disabled readonly>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="time" class="form-label">Time</label>
        <input type="text" class="form-control" id="time"
          value="{{specifiedStartTime add_lesson_error_student.startTime}} ~ {{specifiedEndTime add_lesson_error_student.endTime}}" disabled readonly>
      </div>
      <a href="/lessons/{{teacher.id}}" class="btn btn-primary col-12 col-sm-2 py-2">OK</a>
    </div>
  </div>
</div>
{{/if}}

{{#if add_lesson_success}}
<div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
  style="z-index: 200;background: rgba(108, 117, 125, 0.5);">
  <div class="card col-11 col-md-6 card-dismissible pb-5" style="opacity: 1;">
    <div class="card-body d-flex flex-column align-items-center gap-3">
      <div class="mb-3">
        <h2 class="text-center fw-bold pt-4">預約成功!</h2>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="name" class="form-label">Teacher's name</label>
        <input type="text" class="form-control" id="name" value="{{teacher.User.name}}" disabled
          readonly>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="time" class="form-label">Time</label>
        <input type="text" class="form-control" id="time"
          value="{{specifiedStartTime add_lesson_success.startTime}} ~ {{specifiedEndTime add_lesson_success.endTime}}"
          disabled readonly>
      </div>
      <div class="mb-3 col-12 col-md-10 col-lg-8">
        <label for="time" class="form-label">Link</label>
        <input type="text" class="form-control" id="time"
          value="{{teacher.videoLink}}"
          disabled readonly>
      </div>
      <a href="/lessons/{{teacher.id}}" class="btn btn-primary col-12 col-sm-2 py-2">OK</a>
    </div>
  </div>
</div>
{{/if}}