<div class="row mb-3">
  <div class="col-md-4">
    <div class="row">
      <div class="col-6 col-md-12">
        <div style="width: 100%; max-width:300px;  height: auto;max-height:300px; overflow:hidden;">
          <img src="{{#if user.avatar}}{{user.avatar}}{{else}}https://via.placeholder.com/200x200{{/if}}"
            alt="{{user.name}} avatar" class="w-100 h-100" style="object-fit: cover; object-position:center;">
        </div>
      </div>
      <div class="col-6 col-md-12 d-flex flex-column justify-content-center justify-content-md-between">
        <h3 class="fw-bold my-md-5">{{user.name}}</h3>
        <h5 class="fw-bold">
          {{#if user.nation}}
          {{user.nation}}
          {{else}}
          Earth
          {{/if}}
        </h5>
        {{#if teacher.totalRating}}
        <h5 class="fw-bold">
          <i class="fa-solid fa-heart me-2" style="color: red;"></i>
          {{teacher.totalRating}}
        </h5>
        {{/if}}
      </div>
      <div class="mt-3 mt-md-1">
        <h5 class="fw-bold">My Course Description</h5>
        <p>
          {{#if teacher.courseDescription}}
          {{{formattedText teacher.courseDescription}}}
          {{else}}
          I am a student of Earth.
          {{/if}}
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="mb-4 new-schedule">
      <h3 class="fw-bold mb-3">New Schedule</h3>
      <div class="row">
        {{#if teacher.Lessons}}
        {{#each teacher.Lessons}}
        <div class="col-sm-6 col-md-12 col-lg-6  mb-3">
          <div class="card">
            <div class="card-body">
              <div class="card-title d-flex flex-wrap gap-2">
                <div class="fw-bold">Time:</div>{{specifiedStartTime this.startTime}} ~ {{specifiedEndTime this.endTime}}
              </div>
              <div class="card-title d-flex flex-wrap gap-2">
                <div class="fw-bold">Student's Name:</div>{{this.User.name}}
              </div>
              <div class="card-title d-flex flex-wrap gap-2">
                <div class="fw-bold">Link:</div>
                <a href="/" class="text-decoration-none fw-bold">https://meet.google.com/</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        {{else}}
        <p class="fs-5 my-3 text-secondary text-center border border-2 p-5 rounded-1">目前沒有預約課程!</p>
        {{/if}}
      </div>
    </div>

    <div class="mb-4 lesson-history">
      <h3 class="fw-bold mb-3">Your Teaching Style</h3>
      <p class="">
        {{{formattedText teacher.teachingMethod}}}
      </p>
    </div>

    <div class="ranking mb-4">
      <h3 class="fw-bold mb-3">Recent Reviewed</h3>
      {{#if teacher.Ratings}}
      {{#each teacher.Ratings}}
      <div class="d-flex gap-2 align-items-center">
        <p class="text-center fw-bold bg-warning rounded-1 d-inline-flex px-2" style="width: 40px;">{{this.rating}}</p>
        <p class="">{{this.comment}}</p>
      </div>
      {{/each}}
      {{else}}
      <p class="fs-5 my-3 text-secondary text-center border border-2 p-5 rounded-1">目前沒有學生評分!</p>
      {{/if}}
    </div>

    <div class="d-flex justify-content-end">
      <a href="/teachers/{{user.id}}/edit" class="btn btn-primary col-12 col-sm-5 col-md-3 py-3">Edit Profile & Booking Calendar</a>
    </div>
  </div>
</div>

